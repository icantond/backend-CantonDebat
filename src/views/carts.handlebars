<h1>Carrito de Compras</h1>
<small>ID de carrito: {{userCartId}} <small/>

<ul class="cart-list">
    {{#each cartItems.products}}
    <li class="cart-item">
        <h2>{{ this.product.title }}</h2>
        <p>Categor√≠a: {{ this.product.category }}</p>
        <p>Precio Unitario: ${{ this.product.price }}</p>
        <p>Cantidad: {{ this.quantity }}</p>
        <p>Precio Total por Producto:${{ this.totalPrice }}</p>
        <button class="remove-item-button" data-product-id="{{this.product._id}}" data-cart-id="{{../userCartId}}">Eliminar </button>
    </li>
    {{/each}}
</ul>

<div class="cart-total">
    <p>Total del Carrito: ${{ cartItems.cartTotal }}</p>
</div>

<button id="empty-cart" data-cart-id="{{userCartId}}">Vaciar Carrito</button>
<button id="purchase-cart" data-cart-id="{{userCartId}}">Finalizar compra</button>


