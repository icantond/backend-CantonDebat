{{#each products}}
<div class="product-item">
    <h2>{{ title }}</h2>
    <p>Categor√≠a: {{ category }}</p>
    <p>Precio: ${{ price }}</p>

    <a href="/products/{{ _id }}">Ver detalles</a>
    <h2 class="section-title">Agregar Producto al Carrito</h2>

    <form id="add-product-to-cart-form" enctype="application/x-www-form-urlencoded"
        action="/api/carts/6518b3030b4bb755731f2cd0/products/{{ _id }}" method="POST">

        <label for="quantity">Cantidad:</label>
        <input type="number" id="quantity" name="quantity" placeholder="Ingresa la cantidad" required>

        <button type="submit">Agregar Producto al Carrito</button>
    </form>
</div>
{{/each}}